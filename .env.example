# .env.example
# Скопируйте этот файл в .env и заполните значениями для вашего окружения

# Окружение (development или production)
FLASK_ENV=production

# Секретный ключ Flask (сгенерируйте случайную строку)
SECRET_KEY=your-secret-key-here-change-in-production

# База данных PostgreSQL
DATABASE_URL=postgresql://call_analyzer:password@localhost/call_analyzer

# Пути к файлам
BASE_RECORDS_PATH=/var/calls
PROMPTS_FILE=/opt/call-analyzer/prompts.yaml
ADDITIONAL_VOCAB_FILE=/opt/call-analyzer/additional_vocab.yaml

# API ключи
SPEECHMATICS_API_KEY=your-speechmatics-api-key
TBANK_API_KEY=your-tbank-api-key
TBANK_SECRET_KEY=your-tbank-secret-key
TBANK_STEREO_ENABLED=True

THEBAI_API_KEY=your-thebai-api-key
THEBAI_URL=https://api.deepseek.com/v1/chat/completions
THEBAI_MODEL=deepseek-reasoner

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
ALERT_CHAT_ID=your-alert-chat-id
LEGAL_ENTITY_CHAT_ID=your-legal-entity-chat-id
TG_CHANNEL_NIZH=your-nizh-channel-id
TG_CHANNEL_OTHER=your-other-channel-id

# Логирование
LOG_LEVEL=INFO
LOG_FILE=/var/log/call-analyzer/app.log

# Администратор (для первого входа)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

